<h1 class="text-center my-5">Registro de usuarios nuevos</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form action="/auth/register" method="post">
            <input type="hidden" name="_csrf" value="{{csrfToken}}" /> <!-- Token csrf, formulario proviene de lugar seguro -->
            <input 
                type="text" 
                name="userName" 
                class="form-control mb-2" 
                placeholder="Ingrese nombre de usuario"
            >

            <input 
                type="text" 
                name="email" 
                class="form-control mb-2" 
                placeholder="Ingrese email de usuario"
            >

            <input 
                type="password" 
                name="password" 
                class="form-control mb-2" 
                placeholder="Ingrese su contraseña"
            >

                <input 
                type="password" 
                name="repassword" 
                class="form-control mb-2" 
                placeholder="Vuelva a escribir la contraseña"
            >

            <button class="btn btn-primary" type="submit">Registrar usuario</button>
        </form>
    </div>
</div>

